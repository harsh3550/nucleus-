import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Read {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter the file name: ");
        String fileName = input.nextLine();

        try {
            File file1 = new File("D:\\OneDrive\\OneDrive - nucleusonline\\java assignment\\Harsh\\src\\main\\java\\org\\example\\sagar.txt");
            File file2 = new File("D:\\OneDrive\\OneDrive - nucleusonline\\java assignment\\Harsh\\src\\main\\java\\org\\example\\harsh.txt");
            Scanner fileReader1 = new Scanner(file1);
            Scanner fileReader2 = new Scanner(file2);
            System.out.print("Enter the name of employee: ");
            String name = input.nextLine();
            boolean employeeFound = false;

            while (fileReader1.hasNextLine()) {
                String line = fileReader1.nextLine();
                String[] data = line.split(",");
                if (data[0].equals(name)) {
                    int experience = Integer.parseInt(data[4].trim());
                    if (experience <= 1) {
                        System.out.println("Post: ASE");
                    } else if (experience > 1 && experience <= 3) {
                        System.out.println("Post: SE");
                    } else {
                        System.out.println("Post: TL");
                    }
                    employeeFound = true;
                    break;
                }
            }
            if (!employeeFound) {
                while (fileReader2.hasNextLine()) {
                    String line = fileReader2.nextLine();
                    String[] data = line.split(",");
                    if (data[0].equals(name)) {
                        int experience = Integer.parseInt(data[4].trim());
                        if (experience <= 1) {
                            System.out.println("Post: ASE");
                        } else if (experience > 1 && experience <= 3) {
                            System.out.println("Post: SE");
                        } else {
                            System.out.println("Post: TL");
                        }
                        employeeFound = true;
                        break;
                    }
                }
            }
            fileReader1.close();
            fileReader2.close();

            if (!employeeFound) {
                System.out.println("Employee not found in the files.");
            }
        } catch (FileNotFoundException e) {
            System.out.println("File not found.");
            e.printStackTrace();
        }
    }
}

